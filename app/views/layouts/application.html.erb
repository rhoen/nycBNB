<!DOCTYPE html>
<html>
<head>
  <title>CapStoneProject</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
  <script type="text/javascript"
          src="https://maps.googleapis.com/maps/api/js?<%= ENV["google"] %>"></script>
</head>
<body class="home-page-image">

<% if flash[:errors] %>
  <ul class="sign-errors">
    <% flash[:errors].each do |error| %>
        <li class="sign-error"><%= error %></li>
    <% end %>
  </ul>
<% end %>

<% if logged_in? %>
  <form class="" action="/sessions" method="post">
    <input type="hidden" name="_method" value="delete">
    <%= authorize_page %>
  </form>
<% end %>

<%= yield %>

</body>
</html>
