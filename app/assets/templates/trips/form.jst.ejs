<header class="trip-form-header clearfix">
  <div class="price">
    $<%= listing.escape("price_per_night") %>
  </div>
  <div class="price-unit">
    Per Night
  </div>
</header>
<form class="reserve-form" action="" method="">
  <input type="date" name="check-in" value="">
  <input type="date" name="check-out" value="">
  Guests
  <select class="guests" name="guests">
    <% for (var i = 1; i <= listing.get("guest_limit"); i++) { %>
      <option value="<%= i %>"><%= i %></option>
    <% } %>
  </select>
  <button>Request to Book</button>
</form>
<button>Save to Wish List</button>
