$sign-form-width: 450px;
.home-page-image {
  background-image: url(asset_path("home_page.jpg"));
}
.sign-form {
  background: white;
  margin: auto;
  margin-top:60px;
  width: $sign-form-width;
  border: 2px solid #ccc;
  border-radius: 2px;
}
.sign-form {
  h1 {
    text-align: center;
    font-weight: 700;
    font-size: 64px;
  }
  form {
    padding-top:10px;
    box-sizing: border-box;
  }
  input {
    margin: auto;
    margin-bottom:10px;
    width: $sign-form-width - 20px;
    font-size:16px;
  }
  input:focus {
    border-color: #aaa;
  }
}
.sign-form .text-entered {
  background: #fff8e5;
  border-color:#ffb400;
}
.sign-form .text-entered:focus {
  border-color:#ffb400;
}
.sign-errors {
  background:white;
  margin:auto;
  width:410px;
  padding:10px 20px;
  border: 2px solid red;
}
